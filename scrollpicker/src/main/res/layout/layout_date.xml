<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <com.robin.scrollpicker.YearPicker
        android:id="@+id/yearPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        app:halfVisibleItemCount="2" />

    <com.robin.scrollpicker.MonthPicker
        android:id="@+id/monthPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />

    <com.robin.scrollpicker.DayPicker
        android:id="@+id/dayPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />

    <com.robin.scrollpicker.HourPicker
        android:id="@+id/yearPicker_layout_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />

    <com.robin.scrollpicker.MinutePicker
        android:id="@+id/yearPicker_layout_minut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />
</LinearLayout>